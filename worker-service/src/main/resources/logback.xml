<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Enterprise Logging Configuration for Worker Service -->
    <property name="LOG_PATH" value="${LOG_PATH:-/var/log/csv-processing}"/>
    <property name="APP_NAME" value="worker-service"/>
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{correlationId:-N/A}] %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- Console Appender for Development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- JSON Appender for Production/Containers -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${APP_NAME}","environment":"${SPRING_PROFILES_ACTIVE:-default}"}</customFields>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>jobId</includeMdcKeyName>
            <includeMdcKeyName>batchId</includeMdcKeyName>
            <includeMdcKeyName>recordsProcessed</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- File Appender for Persistent Logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${APP_NAME}"}</customFields>
        </encoder>
    </appender>

    <!-- Async Appender for Non-Blocking Logging -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <!-- Performance Metrics Appender -->
    <appender name="METRICS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-metrics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-metrics.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"${APP_NAME}","type":"metrics"}</customFields>
        </encoder>
    </appender>

    <!-- Spring Framework Logging -->
    <logger name="org.springframework" level="INFO"/>
    
    <!-- Kafka Logging -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.springframework.kafka" level="INFO"/>

    <!-- Application Logging -->
    <logger name="com.example" level="DEBUG"/>
    <logger name="com.example.worker.service" level="DEBUG"/>
    <logger name="com.example.worker.service.CsvProcessor" level="DEBUG"/>
    <logger name="com.example.worker.service.KafkaConsumerService" level="DEBUG"/>

    <!-- WebClient Logging -->
    <logger name="org.springframework.web.reactive" level="DEBUG"/>
    <logger name="reactor.netty" level="INFO"/>

    <!-- CSV Processing Performance -->
    <logger name="com.example.worker.service.CsvProcessor" level="INFO"/>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </root>

    <!-- Production Profile: JSON Logging -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="ASYNC_FILE"/>
        </root>
    </springProfile>
</configuration>
